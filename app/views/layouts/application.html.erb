<!DOCTYPE html>
<html>
  <head>
    <title>Spaceinyourface</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'partials/nav' %>
    <% cache do %>
      <div class="body-container" style="background-image: url(https://apod.nasa.gov/apod/image/1903/M104_Hubble_rba.jpg)">
    <% end %>
      <div class="flash-message">
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
